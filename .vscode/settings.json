  // Disable Live Server if it's installed
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.ignoreFiles": ["**/*"],

  // Optional: stop VS Codeâ€™s built-in Web Preview
  "html.preview.enabled": false
}