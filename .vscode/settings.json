{
  // Make Five Server the only preview you use
  "fiveServer.config": {
    "host": "127.0.0.1",
    "port": 5500,
    "root": "/",
    "open": "index.html",
    "ignore": [".git", ".vscode", "node_modules", "backups", "backup*", "restore_*"]
